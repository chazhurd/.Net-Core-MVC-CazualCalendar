@model WebApplication1.Models.ItemModel

@{
    ViewBag.Title = "AddItem";
}

<h2>Add Item</h2>
@if ((bool)ViewData["Added"])
{

    <div class="alert alert-block" id="warn" style="color: white; text-align: center; background-color: green; border-radius: 4px 4px; width: 300px; margin: auto;">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4>Item Added &oplus;</h4>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
