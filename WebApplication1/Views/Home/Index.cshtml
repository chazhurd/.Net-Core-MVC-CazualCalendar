@{
    ViewBag.Title = "Home Page";
}
<style>
    .centerJumbo {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 90%;
    }

    .centerImage {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }

    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    /* Add some padding inside the card container */
    .cardContainer {
        padding: 2px 16px;
    }
</style>
<script src="~/Scripts/HurdScript.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js" integrity="sha512-8Wy4KH0O+AuzjMm1w5QfZ5j5/y8Q/kcUktK9mPUVaUoBvh3QPUZB822W/vy7ULqri3yR8daH3F58+Y8Z08qzeg==" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/latest/TimelineMax.min.js" integrity="sha512-lJDBw/vKlGO8aIZB8/6CY4lV+EMAL3qzViHid6wXjH/uDrqUl+uvfCROHXAEL0T/bgdAQHSuE68vRlcFHUdrUw==" crossorigin="anonymous"></script>
<div style="background-color: lightyellow; width:100%; text-align:center">Updates soon</div>
<div class="jumbotron" style="background-color: rgb(32,32,32,0.9); color:white">
    <h4 style="float:left">Cazual Entertainment</h4>
    <hr />
    <br />
    <div style="width:100%; overflow-y:hidden; overflow-x: hidden;">
        <img src="~/Imgs/cazual.png" class="centerJumbo" style="max-width:700px">
        <img src="~/Imgs/pnwBubble.png" class="centerJumbo">
    </div>
    <br />
    <h4 style="float:right">Cazual Entertainment</h4>
    <hr />
    <br />

</div>
<hr />
<h4 style=" border: dotted 2px; color: lightcyan; text-align: center">Best of the Entertainment business, right at your fingertips</h4>
<hr />
<div class="card">
    <div class="cardContainer" style="color:cyan">
        <div style="width:100%; height: 300px; overflow-y:hidden; overflow-x: hidden; text-align:center; position: relative; margin-top: 10px" class="container">
            <img src="~/Imgs/partay.jpg" style="opacity: 0.75; position:relative; top: -200px; left: -70px; z-index: 0" width="2000" id="PartyPic" onload="MovePartyLeft()" />
        </div>
        <h2 style="margin-top: 10px; z-index: 1;"><b>Live Entertainment</b></h2>
        <p>We specialize in Live entertainment. From Kid's parties to Weddings we do it all, simply book using Google Calendars or Call and reserve a time. </p>
        <div style="width:100%; overflow-x: hidden; padding: 10px" class="container">
            <a href="/CalendarEvent/AllEvents" class="btn btn-primary btn-info" style="position:relative; left:-20px;">See Events &raquo;</a>
            <a href="/CalendarEvent/BookEvent" class="btn btn-primary btn-info" style="position:relative; left:-20px;">Book Events &raquo;</a>
            @*  <div style="background-color: lightgreen; border-radius:3px 4px; border-color:darkgreen; border-width:4px; width: 140px; font-size: 20px; text-align: center; color: white; height: 40px; padding: 5px"> @Html.ActionLink("Book Here", "BookEvent", "CalendarEvent")&raquo;</div>*@
        </div>
    </div>
</div>
<hr />
<div class="card">
    <div class="cardContainer" style="color:cyan">
        <div style="width:100%; height: 300px; overflow-y:hidden; overflow-x: hidden; text-align:center; position: relative; margin-top: 10px" class="container">
            <img src="~/Imgs/recordingDark.jpg" style="opacity: 0.9; position:relative; top: -600px; left: -1590px; z-index: 0" width="2000" id="JumboPic" onload="MoveHeaderLeft()" />
        </div>
        <h2 style="margin-top: 10px; z-index: 1;"><b>Music Production</b></h2>
        <p>Professional overseer, manager, and guider of the process of producing and recording epic songs. </p>
        <div style="width:100%; overflow-x: hidden; padding: 10px" class="container">
            <a href="~/CalendarEvent/BookEvent" class="btn btn-primary btn-info">Book Consultation &raquo;</a>
        </div>
    </div>
</div>

@if ((bool)ViewData["warn"])
{
    <div class="alert alert-block" id="warn">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4>Warning!</h4>
        Best check yo self, you're not...
    </div>
}

